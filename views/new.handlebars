<div class="container">
    <div class="mb-2">
        <h2>
            Novo conteúdo
        </h2>
    </div>
    <hr>
    <div class="p-2">
        <form action="/new" method="post">
            <div class="mb-3">
                <label for="title">Título <strong class="text-danger">*</strong></label>
                <input type="text" class="form-control" id="title" name="title">
            </div>
            <div class="mb-3">
                <label for="content">Conteúdo <strong class="text-danger">*</strong></label>
                <textarea class="form-control" cols="30" rows="5" id="content" name="content"></textarea>
            </div>
            <div class="mb-3">
                <label for="inputFontes">Fontes <strong class="text-danger">*</strong></label>
                <input type="url" class="form-control" id="inputFontes" name="fonte" placeholder="exemplo.com.br/news">
            </div>
            
            <div class="mb-3 d-grid gap-2">
                <button type="submit" class="btn btn-primary">
                    <i>Enviar</i>
                </button>
            </div>
        </form>
    </div>
</div>